<?php if ( ! defined('BASEPATH')) exit('No direct script access allowed');class Api_controller extends CI_Controller { 	public function __construct(){		parent::__construct();	}	public function get_verification_user_login(){		$this->Api_model->get_verification_user_login();	}	public function get_verification_user_profile(){		$this->Api_model->get_verification_user_profile();	}	public function get_update_profile_verification(){		$this->Api_model->get_update_profile_verification();	}	public function set_password_update(){		$this->Api_model->set_password_update();	}	public function get_new_verification_list(){		$this->Api_model->get_new_verification_list();	}	public function get_new_pending_list(){		$this->Api_model->get_new_pending_list();	}	public function get_new_document_pending_list(){		$this->Api_model->get_new_document_pending_list();	}	public function get_rejected_student_list(){		$this->Api_model->get_rejected_student_list();	}	public function get_my_verified_student(){		$this->Api_model->get_my_verified_student();	}	public function get_single_verification_student(){		$this->Api_model->get_single_verification_student();	}	public function get_single_verification_student_qualification(){		$this->Api_model->get_single_verification_student_qualification();	}	public function set_verification_student(){		$this->Api_model->set_verification_student();	}	public function get_single_verified_date(){		$this->Api_model->get_single_verified_date();	}	public function get_session_list(){		$this->Api_model->get_session_list();	}	public function blended_student_list(){		$this->Api_model->blended_student_list();	}	public function get_single_blended_verification_student(){		$this->Api_model->get_single_blended_verification_student();	}	public function set_blended_erification_student(){		$this->Api_model->set_blended_erification_student();	} 	public function get_blended_single_verified_remark(){		$this->Api_model->get_blended_single_verified_remark();	}	public function verified_blended_student_list(){		$this->Api_model->verified_blended_student_list();	}					    function get_stu_payment_information(){        if($_SERVER["REQUEST_METHOD"]=="POST"){            $data = file_get_contents('php://input');            $data = $this->Api_model->get_stu_information(json_decode($data,true));            if (!empty($data)){                header( "HTTP/1.1 200" );            }else{                header( "HTTP/1.1 404" );            }            echo json_encode($data);        }    }    public function set_stu_payment_information(){        if($_SERVER["REQUEST_METHOD"]=="POST"){            $data = file_get_contents('php://input');            $data = $this->Api_model->set_stu_information(json_decode($data,true));            echo json_encode($data);        }    }	}